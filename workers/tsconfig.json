{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "allowJs": true,
    "outDir": "../workers-dist",

    "strict": true,
    "noImplicitAny": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
