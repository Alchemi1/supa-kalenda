{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "esnext",
      "esnext.asynciterable"
    ],
    "allowJs": true ,

    "strict": true ,
    "noImplicitAny": true ,

    "moduleResolution": "node",
    "esModuleInterop": true ,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true ,

    "resolveJsonModule": true ,
    "forceConsistentCasingInFileNames": true
  }
}
